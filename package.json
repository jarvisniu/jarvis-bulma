{
  "name": "jarvis-bulma",
  "version": "0.1.1-wip",
  "description": "Jarvis Niu's modified version of Bulma",
  "main": "css/jarvis-bulma.css",
  "keywords": [
    "bulma",
    "css"
  ],
  "author": "Jarvis Niu",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf css",
    "serve": "http-server -c-1",
    "build-lib-dev": "sass --watch --no-charset src/bulma.sass css/jarvis-bulma.css",
    "dev": "npm-run-all --parallel clean build-lib-dev serve",
    "build-lib-prod": "sass --no-source-map --no-charset src/bulma.sass css/jarvis-bulma.css",
    "build": "npm run clean && npm run build-lib-prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jarvisniu/jarvis-bulma.git"
  },
  "bugs": {
    "url": "https://github.com/jarvisniu/jarvis-bulma/issues"
  },
  "homepage": "https://github.com/jarvisniu/jarvis-bulma#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "sass": "^1.32.0"
  },
  "files": [
    "css/**/*",
    "src/**/*",
    "docs/**/*"
  ]
}
