{
  "name": "jarvis-bulma",
  "version": "0.0.0",
  "description": "Jarvis Niu's modified version of Bulma",
  "main": "css/bulma.min.css",
  "keywords": [
    "bulma",
    "css"
  ],
  "author": "Jarvis Niu",
  "license": "MIT",
  "scripts": {
    "dev": "http-server -c-1",
    "build-css": "sass src/bulma.sass css/bulma.css",
    "build-min": "cleancss -o css/bulma.min.css css/bulma.css",
    "build": "rm -rf css && npm run build-css && npm run build-min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jarvisniu/jarvis-bulma.git"
  },
  "bugs": {
    "url": "https://github.com/jarvisniu/jarvis-bulma/issues"
  },
  "homepage": "https://github.com/jarvisniu/jarvis-bulma#readme",
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "sass": "^1.32.0"
  },
  "files": [
    "css/**/*",
    "docs/**/*",
    "src/**/*"
  ]
}
